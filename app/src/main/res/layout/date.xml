<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a237e"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Select Date"
        android:textSize="23sp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:padding="12dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:id="@+id/custom_start"
        android:layout_marginTop="77dp"
        android:layout_marginLeft="18dp"
        app:mtf_image="@mipmap/ic_date_range_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <EditText
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="Start Date"
            android:textColor="#616161"
            android:textSize="17sp"
            android:textStyle="bold" />
    </com.github.florent37.materialtextfield.MaterialTextField>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="350dp"
        android:layout_marginLeft="18dp"
        android:layout_height="wrap_content"
        android:id="@+id/custom_end"
        app:mtf_image="@mipmap/ic_date_range_black_24dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/custom_start"
       >
        <EditText
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="End Date"
            android:textColor="#616161"
            android:textSize="17sp"
            android:textStyle="bold" />
    </com.github.florent37.materialtextfield.MaterialTextField>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_placepicker"
        android:text="Next"
        android:layout_marginLeft="160dp"
        android:id="@+id/button"
        android:layout_marginTop="30dp" />

</LinearLayout>